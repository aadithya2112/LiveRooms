FROM node:22-alpine

WORKDIR /app

# Copy package files first for better caching
COPY /frontend/package.json /app/package.json
COPY /frontend/pnpm-lock.yaml /app/pnpm-lock.yaml

# Enable pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Install dependencies
RUN pnpm install

# Copy source code
COPY /frontend /app

# Build argument for signalling server URL
ARG VITE_SIGNALLING_SERVER_URL=http://server:3000
ENV VITE_SIGNALLING_SERVER_URL=$VITE_SIGNALLING_SERVER_URL

# Build the application
RUN pnpm build

# Use non-root user for security
RUN addgroup -g 1001 -S nodejs
RUN adduser -S nextjs -u 1001
RUN chown -R nextjs:nodejs /app
USER nextjs

# Use preview for production-like serving
CMD ["pnpm", "preview", "--host", "0.0.0.0"]

EXPOSE 5173